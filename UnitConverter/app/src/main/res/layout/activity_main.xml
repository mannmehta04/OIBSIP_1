<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="28sp"
        android:text="Unit Converter"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/inputText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:text="Enter Data:" />

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="320dp"
        android:layout_height="48sp"
        android:layout_below="@+id/inputText1"
        android:layout_centerHorizontal="true"
        android:hint="Enter Unit"
        android:inputType="numberDecimal"/>

    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="320dp"
        android:layout_height="48sp"
        android:layout_below="@id/inputEditText"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_below="@+id/unitSpinner"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultLabel"
        android:textSize="36sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:text="Some Conversions may result in smaller data and might not able to display due to limitations."
        android:layout_below="@id/resultTextView"
        android:textAlignment="center" />

</RelativeLayout>
